<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NgenyProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#013ACA</item>
        <item name="colorPrimaryVariant">#010893</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.NgenyProject.Fullscreen" parent="Theme.NgenyProject">
        <item name="android:actionBarStyle">@style/Widget.Theme.NgenyProject.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.NgenyProject.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#F0F9FD</item>
        <item name="fullscreenTextColor">#046895</item>
    </style>
</resources>